<div class="container">
  <div class="row m-bt-30">
    <div class="table-responsive">
      <table class="table table-hover table-vert-align">
        <thead class="thead-default">
          <tr>
            <th class="col-xs-12 col-sm-8">List</th>
            <th class="col-xs-12 col-sm-2">Dead Line</th>
            <th class="col-xs-12 col-sm-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @todo_lists.each do |todo_list| %>
            <tr>
              <td><%= link_to todo_list.list_name, todo_list %></td>
              <td><%= todo_list.list_due_date %></td>
              <td>
                <%= link_to raw('<span class="glyphicon glyphicon-plus"></span>'), new_todo_list_todo_item_path(todo_list), {class: 'btn btn-default', title: 'Add New Item',  'data-placement': 'bottom', 'role': 'button'} %>
                <%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_todo_list_path(todo_list), {class: 'btn btn-default', title: 'Edit',  'data-placement': 'bottom', 'role': 'button'} %> <%= link_to raw('<span class="glyphicon glyphicon-remove-sign"></span>'), todo_list, {class: 'btn btn-default', title: 'Delete',  'data-placement': 'bottom', 'role': 'button', method: :delete, data: { confirm: 'Are you sure you want to delete the list?' }} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= will_paginate @todo_lists %>
  <div class="row m-bt-30">
    <div class="col-xs-12 col-sm-12">
      <div class="pull-right">
        <%= link_to raw('<button type="button" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add List</button>'), new_todo_list_path, {'title':'Add New List'} %>
      </div>
    </div>
  </div>
  <br>
</div>